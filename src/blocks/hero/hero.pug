main.hero.section
	header.header#main
		.container
			.row
				.header--logo.col-xl-2.col-lg-2.col-md-2.col-xs-2
					a(href="#main")
						img(src="images/logo.svg", alt="abus-logo").logo--image
				.header--login.col-xl-2.col-lg-2.col-md-2.col-xs-2.offset-xl-8.offset-lg-8.offset-md-8.offset-xs-8
					button.login--button.button
						.button--image
							img(src="./images/usersvg.svg", alt="user")
						.button--text Войти в кабинет
	.hero--title
		h1.title--main Ваши проблемы - наши решения
		h2.title--second Ваши деньги в надежном месте
	.hero--scroll-down
		img(src="images/scrolldown.svg", alt="scrolldown")
